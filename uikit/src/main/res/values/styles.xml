<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.BankPick.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.BankPick.SmallComponent</item>
        <item name="elevation">8dp</item>

        <item name="android:height">56dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.BankPick.Body1</item>

        <item name="backgroundTint">@color/bankpick_navy_blue</item>
    </style>

    <style name="Widget.BankPick.Button.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>

        <item name="shapeAppearance">@style/ShapeAppearance.BankPick.Circle</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <item name="android:minWidth">42dp</item>
        <item name="minHeight">42dp</item>

        <item name="strokeWidth">0dp</item>
        <item name="elevation">8dp</item>

        <item name="backgroundTint">@color/bankpick_white_smoke</item>

        <item name="iconTint">@color/bankpick_black_russian</item>
    </style>

    <style name="Widget.BankPick.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintEnabled">false</item>
        <!--        <item name="errorEnabled">false</item>-->
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="Widget.BankPick.TextInputLayout.Email">
        <item name="startIconDrawable">@drawable/ic_email</item>
        <item name="startIconTint">@color/bankpick_spun_pearl</item>
    </style>

    <style name="Widget.BankPick.TextInputLayout.Password">
        <item name="startIconDrawable">@drawable/ic_password</item>
        <item name="startIconTint">@color/bankpick_spun_pearl</item>
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@color/bankpick_spun_pearl</item>
    </style>

    <style name="Widget.BankPick.TextInputEditText" parent="">
        <!--        <item name="android:textAppearance">@style/TextAppearance.NineTwoThree.Subtitle2</item>-->
        <item name="android:textColor">@color/bankpick_black_russian</item>
        <item name="android:textColorHint">@color/bankpick_white_smoke</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Widget.BankPick.TextInputEditText.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="Widget.BankPick.TextInputEditText.Password">
        <item name="android:inputType">textPassword</item>
    </style>

</resources>